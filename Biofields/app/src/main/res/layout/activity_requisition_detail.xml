<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.hics.biofields.Views.Activity.RequisitionDetailActivity">

    <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_detail"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="?attr/actionBarSize"
        app1:titleTextColor="@color/colorWhite"
        app1:titleTextAppearance="@style/ToolbarAppearanceTitle" />

<ScrollView
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_sixteen"
    android:background="@color/blue_background"
    >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/act_detail_num"
                        style="@style/font_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="0.7"
                        android:text="No. 222" />

                    <ImageView
                        android:id="@+id/act_detail_urgent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/timer_clock"
                        android:layout_margin="@dimen/margin_eigth"/>
                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="@dimen/margin_six"
                    android:layout_marginStart="@dimen/margin_six"
                    android:layout_marginTop="@dimen/margin_eigth"
                    android:layout_marginBottom="@dimen/margin_eigth"
                    android:background="@color/silver">
                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/act_detail_factory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_four"
                        android:layout_marginEnd="@dimen/margin_four"
                        android:layout_marginTop="@dimen/margin_eigth"
                        android:text="Procter &amp; Gamble"
                        style="@style/font_body_light"
                        android:maxLines="2"
                        android:gravity="center|start"
                        android:drawableStart="@mipmap/building"
                        android:drawablePadding="@dimen/margin_four"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/act_detail_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_four"
                        android:layout_marginEnd="@dimen/margin_four"
                        android:layout_marginTop="@dimen/margin_eigth"
                        android:text="Pago de derecho Pago de derecho Pago de derecho Pago de derecho"
                        style="@style/font_body_light"
                        android:maxLines="2"
                        android:gravity="center|start"
                        android:drawableStart="@mipmap/info"
                        android:drawablePadding="@dimen/margin_four"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/act_detail_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginStart="@dimen/margin_four"
                        android:layout_marginEnd="@dimen/margin_four"
                        android:layout_marginTop="@dimen/margin_eigth"
                        android:text="22 Febrero 2017"
                        style="@style/font_body_light"
                        android:maxLines="2"
                        android:gravity="center|start"
                        android:drawableStart="@mipmap/calendar"
                        android:drawablePadding="@dimen/margin_four"
                        />
                    <TextView
                        android:id="@+id/act_detail_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:layout_marginTop="4dp"
                        android:text="No enviada"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:background="@drawable/shape_status_not_sent"
                        android:padding="@dimen/margin_six"
                        android:textAlignment="center"
                        android:layout_marginEnd="@dimen/margin_four"
                        />
                </LinearLayout>

                <View
                    android:id="@+id/divider_bottom"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="@dimen/margin_six"
                    android:layout_marginStart="@dimen/margin_six"
                    android:layout_marginTop="@dimen/margin_eigth"
                    android:layout_marginBottom="@dimen/margin_eigth"
                    android:background="@color/silver">
                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/margin_four">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Monto"
                        style="@style/font_title_detail"
                        android:padding="@dimen/margin_six"
                        android:textStyle="bold"
                        />

                    <VideoView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        />

                    <TextView
                        android:id="@+id/act_detail_amount"
                        style="@style/font_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/margin_two"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@mipmap/coins"
                        android:gravity="end"
                        android:padding="@dimen/margin_four"
                        android:text="22,000,000.00" />
                </LinearLayout>
                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="@dimen/margin_six"
                    android:layout_marginStart="@dimen/margin_six"

                    android:layout_marginBottom="@dimen/margin_eigth"
                    android:background="@color/silver">
                </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/margin_four">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anotaciones"
                    style="@style/font_title_detail"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/act_detail_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Es imposible que tales potencias o seres hayan sobrevivido...
hayan sobrevivido a una época infinitamente remota donde...
la conciencia se manifestaba, quizá, bajo cuerpos y formas "
                    style="@style/font_body_light"
                   />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/margin_four">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Involucrados"
                        style="@style/font_title_detail"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\u2022 Vicente Barrera"
                        android:maxLines="2"
                        style="@style/font_body_light"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\u2022 Margarita Uribe"
                        android:maxLines="2"
                        style="@style/font_body_light"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\u2022 Luz Uribe"
                        android:maxLines="2"
                        style="@style/font_body_light"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/margin_four">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Centro de Costos"
                    style="@style/font_title"/>
                <TextView
                    android:id="@+id/act_detail_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Direccioón General"
                    android:maxLines="2"
                    style="@style/font_body_light"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proveedor"
                    style="@style/font_title"/>
                <TextView
                    android:id="@+id/act_detail_provider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Procter &amp; Gamble | P&amp;G México"
                    android:maxLines="2"
                    style="@style/font_body_light"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Servicio Facturado"
                    style="@style/font_title"/>
                <TextView
                    android:id="@+id/act_detail_billed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SI"
                    android:maxLines="2"
                    style="@style/font_body_light"
                    android:visibility="gone"/>
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_itembudge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_four">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/font_title_detail"
                    android:textStyle="bold"
                    android:text="Producto / Servicio / Monto"/>

            <LinearLayout
                android:id="@+id/act_detail_ln_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_four">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/font_title_detail"
                        android:textStyle="bold"
                        android:text="Validación"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rechazado"
                        style="@style/font_body_light"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aprobado"
                        style="@style/font_body_light"/>
                </RadioGroup>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/act_detail_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/reason"
                        android:inputType="textNoSuggestions"
                        android:maxLength="15"/>
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/act_detail_sent"
                    android:text="@string/sent"
                    style="@style/BlueButton"
                    app:backgroundTint="@color/colorAccent"
                    app:targetApi="lollipop"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
    </LinearLayout>