<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_four"
    tools:context="com.hics.biofields.Views.Activity.RequisitionDetailActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_four">
            <TextView
                android:id="@+id/act_detail_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. 2222"
                style="@style/font_title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compañia"
                style="@style/font_title"/>
            <TextView
                android:id="@+id/act_detail_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OCF Castor fields S.A. P. I, de C.V."
                android:maxLines="2"
                style="@style/font_body"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción"
                style="@style/font_title"/>
            <TextView
                android:id="@+id/act_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pago de Derecho"
                android:maxLines="2"
                style="@style/font_body"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado"
                style="@style/font_title"/>
            <TextView
                android:id="@+id/act_detail_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cotizado"
                android:maxLines="2"
                style="@style/font_body"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anotaciones"
                style="@style/font_title"/>
            <TextView
                android:id="@+id/act_detail_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Es imposible que tales potencias o seres hayan sobrevivido...
hayan sobrevivido a una época infinitamente remota donde...
la conciencia se manifestaba, quizá, bajo cuerpos y formas "
                style="@style/font_body"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_involveds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_four">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/font_title_reverse"
                    android:text="Involucrados"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vicente Barrera"
                android:maxLines="2"
                style="@style/font_body_light"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Margarita Uribe"
                android:maxLines="2"
                style="@style/font_body_light"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_general_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_four">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monto"
                style="@style/font_title"/>
            <TextView
                android:id="@+id/act_detail_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$22,000,000.00 MXN"
                android:maxLines="2"
                style="@style/font_body"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Centro de Costos"
                style="@style/font_title"/>
            <TextView
                android:id="@+id/act_detail_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccioón General"
                android:maxLines="2"
                style="@style/font_body"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proveedor"
                style="@style/font_title"/>
            <TextView
                android:id="@+id/act_detail_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Procter &amp; Gamble | P&amp;G México"
                android:maxLines="2"
                style="@style/font_body"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Servicio Facturado"
                style="@style/font_title"/>
            <TextView
                android:id="@+id/act_detail_billed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SI"
                android:maxLines="2"
                style="@style/font_body"
                android:visibility="gone"/>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="80dp"
                android:layout_height="40dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pago Urgente"
                style="@style/font_title"/>
            <TextView
                android:id="@+id/act_detail_urgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:maxLines="2"
                style="@style/font_body"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_itembudge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_four">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/font_title_reverse"
                    android:text="Producto / Servicio / Monto"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/act_detail_ln_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_four">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/font_title_reverse"
                        android:text="Validación"/>
                </LinearLayout>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rechazado"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aprobado"/>
                </RadioGroup>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/act_detail_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/reason"
                        android:inputType="textNoSuggestions"
                        android:maxLength="15"/>
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/act_detail_sent"
                    android:text="@string/sent"
                    style="@style/BlueButton"
                    app:backgroundTint="@color/colorAccent"
                    app:targetApi="lollipop"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>