<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ln"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/item_requisition_statusbar"
                android:layout_width="@dimen/margin_four"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/item_requisition_statusbar_gray"
                android:layout_width="@dimen/margin_four"
                android:layout_height="match_parent"
                android:background="@color/status_not_sent"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_requisition_num"
                        style="@style/font_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="0.7"
                        android:text="No. 222" />

                    <ImageView
                        android:id="@+id/item_requisition_urgent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_eigth"
                        android:src="@mipmap/timer_clock"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/item_requisition_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_status_not_sent"
                        android:padding="@dimen/margin_six"
                        android:text="No enviada"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_eigth"
                    android:layout_marginEnd="@dimen/margin_six"
                    android:layout_marginStart="@dimen/margin_six"
                    android:layout_marginTop="@dimen/margin_eigth"
                    android:background="@color/silver"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_requisition_item_company"
                        style="@style/font_body_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_four"
                        android:layout_marginStart="@dimen/margin_four"
                        android:layout_marginTop="@dimen/margin_eigth"
                        android:drawablePadding="@dimen/margin_four"
                        android:drawableStart="@drawable/ic_company"
                        android:drawableTint="@color/gray_icon"
                        android:gravity="center|start"
                        android:maxLines="2"
                        android:text="Procter &amp; Gamble" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_requisition_provider"
                        style="@style/font_body_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_four"
                        android:layout_marginStart="@dimen/margin_four"
                        android:layout_marginTop="@dimen/margin_eigth"
                        android:drawablePadding="@dimen/margin_four"
                        android:drawableStart="@drawable/ic_supplier"
                        android:drawableTint="@color/gray_icon"
                        android:gravity="center|start"
                        android:maxLines="2"
                        android:text="Pago de derecho Pago de derecho Pago de derecho Pago de derecho" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_requisition_description"
                        style="@style/font_body_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_four"
                        android:layout_marginStart="@dimen/margin_four"
                        android:layout_marginTop="@dimen/margin_eigth"
                        android:drawablePadding="@dimen/margin_four"
                        android:drawableStart="@drawable/ic_info"
                        android:drawableTint="@color/gray_icon"
                        android:gravity="center|start"
                        android:maxLines="2"
                        android:text="Pago de derecho Pago de derecho Pago de derecho Pago de derecho" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/item_requisition_date"
                        style="@style/font_body_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_four"
                        android:layout_marginStart="@dimen/margin_four"
                        android:layout_marginTop="@dimen/margin_eigth"
                        android:drawablePadding="@dimen/margin_four"
                        android:drawableStart="@mipmap/calendar"
                        android:gravity="center|start"
                        android:maxLines="2"
                        android:text="22 Febrero 2017" />
                </LinearLayout>

                <View
                    android:id="@+id/divider_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_eigth"
                    android:layout_marginEnd="@dimen/margin_six"
                    android:layout_marginStart="@dimen/margin_six"
                    android:layout_marginTop="@dimen/margin_eigth"
                    android:background="@color/silver"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item_requisition_urgent_txt"
                        style="@style/font_title"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_two"
                        android:layout_marginTop="4dp"
                        android:padding="@dimen/margin_four"
                        android:gravity="end"
                        android:layout_marginStart="@dimen/margin_eigth"
                        android:text="URGENTE" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.2" />

                    <TextView
                        android:id="@+id/item_requisition_amount"
                        style="@style/font_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/margin_two"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@mipmap/coins"
                        android:drawablePadding="@dimen/margin_four"
                        android:gravity="end"
                        android:padding="@dimen/margin_four"
                        android:text="$22,000,000.00 MxN" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>