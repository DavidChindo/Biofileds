<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_eigth">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            style="@style/font_title_detail"
            android:padding="@dimen/margin_six"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/item_total_amount"
            style="@style/font_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_money"
            android:drawableTint="@color/gray_icon"
            android:drawablePadding="@dimen/margin_four"
            android:gravity="center"
            android:layout_marginEnd="@dimen/margin_eigth"
            android:padding="@dimen/margin_four"
            android:layout_centerInParent="true"
            android:text="$22,000,000.00 MxN" />
    </RelativeLayout>

</LinearLayout>