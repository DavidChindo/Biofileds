<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlueButton" >
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="font_title">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/margin_four</item>
    </style>

    <style name="font_title_reverse">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/margin_four</item>
    </style>

    <style name="font_body">
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:paddingBottom">@dimen/margin_four</item>
        <item name="android:paddingStart">@dimen/margin_six</item>
    </style>

    <style name="font_body_light">
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingBottom">@dimen/margin_four</item>
        <item name="android:paddingStart">@dimen/margin_six</item>
    </style>

    <style name="font_body_italic">
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingBottom">@dimen/margin_four</item>
        <item name="android:paddingStart">@dimen/margin_six</item>
    </style>

</resources>
